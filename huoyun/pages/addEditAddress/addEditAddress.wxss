page{
  background: #F5F5F5;
  height: 100%;
}
.add-address{
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  padding: 16rpx 24rpx;
  background: white;
  box-sizing: border-box;
}
.add-address .but-box{
}
.add-address .but-box button{
  width: 100%;
  height: 88rpx;
  background: #FFC53B;
  border-radius: 44rpx;
  font-size: 34rpx;
  color: #333333;
}

.info-box{
  background: white;
  border-radius: 0rpx;
  margin: 24rpx 0 25rpx;
  padding: 0 25rpx;
  box-shadow: 0px 2rpx 10rpx 0rpx rgba(217, 215, 209, 0.5);
  z-index: 2;
  position: relative;
}
.info-box .ico{
  position: relative;
}
.info-box .ico image{
  width: 48rpx;
  height: 48rpx;
  object-fit: contain;
  position: relative;
}
.info-box .ico .title{
  font-size: 30rpx;
  color: #333;
}
.info-box .area-box .start-area{
  position: relative;
}
.info-box .area-box .start-area picker{
  position: relative;
  z-index: 9999;
}
.info-box .area-box .area-text{
  font-size: 30rpx;
  color: #333;
}
.info-box .tips{
  font-size: 30rpx;
  color: #ccc;
}
.info-box .inp-box .tips{
  width: 100%;
}
.info-box .guide{
  width: 28rpx;
  height: 28rpx;
  font-size: 0;
}
.info-box .guide image{
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.info-box .guide .title{
  font-size: 30rpx;
  color: #333;
}
.info-box .ico{
  width: 120rpx;
  text-align: left;
  font-size: 0;
  flex-shrink: 0;
}
.info-box .area-box .start-area{
  border-bottom: 1px solid #E6E6E6;
}
.info-box .area-box .picker{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.info-box .area-box .picker .right{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 116rpx;
  padding-left: 45rpx;
}
.info-box .area-box .end-area .picker .right{
  border-bottom: none;
}
.info-box .area-box .end-area{
  border-bottom: 1px solid #E6E6E6;
}
.info-box .inp-box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #E6E6E6;
}
.info-box .inp-box:last-child{
    border-bottom: none;
}
.info-box .inp-box .right{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 116rpx;
  padding-left: 45rpx;
}
.info-box .inp-box .right .guide{
  width: auto;
}
.info-box .inp-box .right input{
  width: 100%;
  color: #333;
}

